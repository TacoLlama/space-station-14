<BoxContainer
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Orientation="Vertical"
    HorizontalExpand="True">
    <OutputPanel Name="TextOutput" VerticalExpand="true" />
    <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
        <Button Visible="False" Name="CloseTicket" Access="Public" Text="{Loc 'mentor-close-ticket'}" StyleClasses="OpenBoth" HorizontalAlignment="Left" />
        <Button Visible="False" Name="TptoTicket" Access="Public" Text="{Loc 'mentor-tpto'}" StyleClasses="OpenBoth" HorizontalAlignment="Right" />
        <RichTextLabel Name="TypingIndicator" Access="Public" />
    </BoxContainer>
    <HistoryLineEdit Name="SenderLineEdit" />
</BoxContainer>
