<Control  xmlns="https://spacestation14.io"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          HorizontalExpand="True">
    <ScrollContainer VerticalExpand="True">
        <BoxContainer Orientation="Vertical" VerticalExpand="True">
            <BoxContainer
                Name="PersonalNotes" Access="Public"
                Orientation="Vertical" VerticalExpand="True">
                <Label Text="Personal Notes:"/>
                <TextEdit Name="PersonalNotesInput" Access="Public" MinSize="220 100" Margin="10" HorizontalExpand="True" VerticalExpand="True" />
            </BoxContainer>
            <BoxContainer
                Name="OOCNotes" Access="Public"
                Orientation="Vertical" VerticalExpand="True" >
                <Label Text="OOC Notes:"/>
                <TextEdit Name="OOCNotesInput" Access="Public" MinSize="220 100" Margin="10" HorizontalExpand="True" VerticalExpand="True" />
            </BoxContainer>
        </BoxContainer>
    </ScrollContainer>
</Control>
